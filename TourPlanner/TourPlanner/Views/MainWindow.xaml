<Window x:Class="TourPlanner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:TourPlanner.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        xmlns:views ="clr-namespace:TourPlanner.Views"
        mc:Ignorable="d"
        Title="Tour-Planner" Height="420" Width="707">
    <Window.DataContext>
        <viewmodels:MainViewModel></viewmodels:MainViewModel>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:ShowTourViewModel}">
            <views:ShowTourView></views:ShowTourView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AddTourViewModel}">
            <views:ViewAddTour></views:ViewAddTour>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <!--searchbar-->
        <TextBox Grid.Row="0" x:Name="SearchBar" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="249" Height="20"/>
        <Button Grid.Row="0" Content="     " HorizontalAlignment="Left" Margin="259,10,0,0" VerticalAlignment="Top">
            <!--<Button.Background>
                <ImageBrush ImageSource="/Views/694985.png"/>
            </Button.Background>-->
        </Button>

        <!--<Button Content="File" HorizontalAlignment="Left" Margin="288,10,0,0" VerticalAlignment="Top" Width="66" Background="{x:Null}"/>
        <Button Content="Edit" HorizontalAlignment="Left" Margin="359,10,0,0" VerticalAlignment="Top" Width="65" Background="{x:Null}"/>
        <Button Content="Options" HorizontalAlignment="Left" Margin="429,10,0,0" VerticalAlignment="Top" Width="65" Background="{x:Null}"/>-->
        <DockPanel Grid.Row="1">
            <Button Content="Add New Tour" DockPanel.Dock="Left"  Command="{Binding showTourPageCommand}"/>
            <Button Content="Edit Tour"  DockPanel.Dock="Left"  Command="{Binding editTourPageCommand}"/>
            <Button Content="delete Tour"  DockPanel.Dock="Left"/>
        </DockPanel>

        <ListBox Grid.Row="2" x:Name="TourList" Margin="10,10,584,10" ItemsSource="{Binding TourItems}" SelectedItem="{Binding CurrentItem}" >
            <!--später contet auslesen von DB und neues element über DB einfügen-->
            <!--OnSelect die infos zeigen -> neue seite laden?-->

            <ListBoxItem>Tour 1</ListBoxItem>

        </ListBox>

        <!--statt FRAME gibt es ContentControl, hier werden die Sachen eingeblendet welche oben definiert worden sind unter window.resource-->
        <!--bei den jeweiligen buttons zu den verschiedenen ansichten muss ein command hinterlegt sein, dieser ändern im MainViewModel die variable "selectedViewModel"-->
        <ContentControl x:Name="Pages" Margin="134,10,5,10" Content="{Binding SelectedViewModel}" Grid.Row="2"></ContentControl>

    </Grid>
</Window>
